{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "package": "npm run build && pkg . --out-path dist",
    "test": "vitest run --coverage --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "media/**/*",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bonjour-service": ">=1.0.0",
    "express": ">=5.0.0",
    "fuse.js": ">=7.0.0",
    "ws": ">=8.0.0"
  },
  "devDependencies": {
    "@types/express": ">=5.0.0",
    "@types/node": ">=24.0.0",
    "@types/supertest": ">=6.0.0",
    "@types/ws": ">=8.0.0",
    "@typescript-eslint/eslint-plugin": ">=8.0.0",
    "@typescript-eslint/parser": ">=8.0.0",
    "@vitest/coverage-v8": ">=3.0.0",
    "eslint": ">=9.0.0",
    "pkg": ">=5.0.0",
    "supertest": ">=7.0.0",
    "ts-node": ">=10.0.0",
    "tsx": ">=4.0.0",
    "typescript": ">=5.0.0",
    "vitest": ">=3.0.0",
    "ws-mock": ">=0.1.0"
  }
}
